        "# Este código verifica si un número es positivo, negativo o cero.\n",
        "\n",
        "numero = int(input(\"Digite un número: \"))\n",
        "\n",
        "if numero == 0:\n",
        "  print(\"El número es cero\")\n",
        "else:\n",
        "  if  numero > 0:\n",
        "      print(\"El número es positivo\")\n",
        "  else:\n",
        "      print(\"El número es negativo\")"
      ]
